{
  "name": "@croacroa/react-native-template",
  "version": "1.0.0",
  "description": "Production-ready React Native template with Expo, authentication, i18n, offline support, and more",
  "main": "expo-router/entry",
  "author": "Croacroa <contact@croacroa.dev>",
  "license": "MIT",
  "homepage": "https://github.com/croacroa-dev-team/template-react-native#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/croacroa-dev-team/template-react-native.git"
  },
  "bugs": {
    "url": "https://github.com/croacroa-dev-team/template-react-native/issues"
  },
  "keywords": [
    "react-native",
    "expo",
    "template",
    "typescript",
    "nativewind",
    "tailwind",
    "zustand",
    "react-query",
    "authentication",
    "i18n",
    "offline",
    "biometrics",
    "push-notifications",
    "sentry",
    "production-ready"
  ],
  "scripts": {
    "start": "expo start",
    "dev": "expo start --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build:dev": "eas build --profile development",
    "build:preview": "eas build --profile preview",
    "build:prod": "eas build --profile production",
    "submit:ios": "eas submit --platform ios",
    "submit:android": "eas submit --platform android",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.0",
    "@gorhom/bottom-sheet": "^4.6.0",
    "@hookform/resolvers": "^3.6.0",
    "@react-native-async-storage/async-storage": "^1.23.1",
    "@react-native-community/netinfo": "^11.3.2",
    "@sentry/react-native": "^7.8.0",
    "@tanstack/query-async-storage-persister": "^5.51.1",
    "@tanstack/react-query": "^5.51.1",
    "@tanstack/react-query-persist-client": "^5.51.1",
    "bottleneck": "^2.19.5",
    "burnt": "^0.12.2",
    "clsx": "^2.1.1",
    "expo": "~52.0.0",
    "expo-constants": "~17.0.0",
    "expo-dev-client": "~5.0.0",
    "expo-device": "~7.0.0",
    "expo-font": "~13.0.0",
    "expo-image": "~2.0.0",
    "expo-linking": "~7.0.0",
    "expo-local-authentication": "~15.0.0",
    "expo-localization": "~15.0.0",
    "expo-notifications": "~0.29.0",
    "expo-router": "~4.0.0",
    "expo-secure-store": "~14.0.0",
    "expo-splash-screen": "~0.29.0",
    "expo-status-bar": "~2.0.0",
    "expo-system-ui": "~4.0.0",
    "expo-updates": "~0.26.0",
    "i18next": "^23.0.0",
    "nativewind": "^4.0.1",
    "react": "18.3.1",
    "react-hook-form": "^7.52.1",
    "react-i18next": "^14.0.0",
    "react-native": "0.76.0",
    "react-native-gesture-handler": "~2.20.0",
    "react-native-reanimated": "~3.16.0",
    "react-native-safe-area-context": "^4.12.0",
    "react-native-screens": "~4.0.0",
    "react-native-worklets": "^0.7.1",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.4",
    "zod": "^3.23.8",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@storybook/addon-essentials": "^8.1.0",
    "@storybook/addon-react-native-web": "^0.0.24",
    "@storybook/react": "^8.1.0",
    "@storybook/react-webpack5": "^8.1.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.5.1",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-expo": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-expo": "~52.0.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "storybook": "^8.1.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "files": [
    "app",
    "assets",
    "components",
    "constants",
    "hooks",
    "i18n",
    "services",
    "stores",
    "types",
    "utils",
    "scripts",
    "maestro",
    "docs",
    ".storybook",
    ".github",
    "__tests__",
    "app.config.ts",
    "babel.config.js",
    "eas.json",
    "global.css",
    "jest.config.js",
    "metro.config.js",
    "nativewind-env.d.ts",
    "tailwind.config.js",
    "tsconfig.json",
    ".env.example",
    ".eslintrc.js",
    ".prettierrc",
    ".gitignore",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
